  "paths": {
    "/bookings": {
      "post": {
        "tags": [
          "booking"
        ],
        "summary": "Add a new booking to the bookings",
        "operationId": "addBooking",
        "requestBody": {
          "description": "Booking object that needs to be added to the list of existing bookings",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InputBooking"
              }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "Invalid input",
            "content": {}
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Booking"
                }
              }
            }
          }
        },
        "security": [
          {
            "book-a-desk_auth": [
              "write:bookings",
              "read:bookings"
            ]
          }
        ],
        "x-codegen-request-body-name": "body"
      }
    },
    "/cancelBookings": {
      "post": {
        "tags": [
          "booking"
        ],
        "summary": "Cancel a booking",
        "operationId": "cancelBooking",
        "requestBody": {
          "description": "Booking object that needs to be cancelled",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InputCancellation"
              }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "Invalid input",
            "content": {}
          },
          "200": {
            "description": "OK",
            "content": "Booking has been cancelled."
          }
        },
        "security": [
          {
            "book-a-desk_auth": [
              "write:bookings",
              "read:bookings"
            ]
          }
        ],
        "x-codegen-request-body-name": "body"
      }
    },
    "/offices": {
      "get": {
        "tags": [
          "office",
          "booking"
        ],
        "summary": "Retrieve all existing offices.",
        "operationId": "getOffices",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Offices"
                }
              }
            }
          }
        },
        "security": [
          {
            "book-a-desk_auth": [
              "read:offices"
            ]
          }
        ],
        "x-codegen-request-body-name": "body"
      }
    },
    "/offices/{officeId}/availabilities": {
      "get": {
        "tags": [
          "office",
          "booking"
        ],
        "summary": "Retrieve the availabilities for a given office and date",
        "operationId": "getOfficesByDate",
        "parameters": [
          {
            "in": "path",
            "name": "officeId",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "date",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OfficeAvailability"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "security": [
          {
            "book-a-desk_auth": [
              "read:offices"
            ]
          }
        ],
        "x-codegen-request-body-name": "body"
      }
    }
  },
