          },
          "date" : {
            "type": "string",
            "format": "date"
          },
          "user" : {
            "$ref": "#/components/schemas/UserReference"
          }
        }
      },
      "Booking": {
        "required": [
          "office",
          "date",
          "user"
        ],
        "type": "object",
        "properties": {
          "office": {
