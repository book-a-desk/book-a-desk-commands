          },
          "date" : {
            "type": "string",
            "format": "date"
          },
          "user" : {
            "$ref": "#/components/schemas/UserReference"
          }
        }
      },
      "Cancellation": {
        "required": [
          "office",
          "date",
          "user"
        ],
        "type": "object",
        "properties": {
          "office": {
            "$ref": "#/components/schemas/OfficeReference"
          },
          "date" : {
            "type": "string",
            "format": "date"
          },
          "user" : {
            "$ref": "#/components/schemas/UserReference"
          }
        }
